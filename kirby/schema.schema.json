{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://acme.com/schema.schema.json",
    "title": "Schema",
    "description": "A Kirby Schema",
    "type": "object",
    "properties": {
        "mask": {
            "$ref": "#/$defs/mask"
        },
        "columns": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/column"
            }
        }
    },
    "additionalProperties": false,
    "$defs": {
        "mask": {
            "title": "Schema column mask",
            "description": "A mask for a column",
            "type": "object",
            "properties": {
                "sourceId": {
                    "description": "The source ID of the mask",
                    "type": "string"
                },
                "primaryFields": {
                    "title": "Schema column mask primary fields",
                    "description": "The primary fields of the mask",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "secondaryFields": {
                    "title": "Schema column mask secondary fields",
                    "description": "The secondary fields of the mask",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "column": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                }
            },
            "oneOf": [
                {
                    "$comment": "Column with no type (i.e. only 'description')",
                    "title": "Column of no type",
                    "required": [
                        "description"
                    ]
                },
                {
                    "title": "Column of an array of types",
                    "properties": {
                        "type": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "boolean",
                                    "integer",
                                    "number",
                                    "string"
                                ]
                            }
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "additionalProperties": false
                },
                {
                    "title": "Column of type 'null', 'boolean', 'integer', 'number' or 'string'",
                    "properties": {
                        "type": {
                            "anyOf": [
                                {
                                    "const": null
                                },
                                {
                                    "const": "boolean"
                                },
                                {
                                    "const": "integer"
                                },
                                {
                                    "const": "number"
                                },
                                {
                                    "const": "string"
                                }
                            ]
                        }
                    },
                    "required": [
                        "type"
                    ],
                    "additionalProperties": false
                },
                {
                    "title": "Column of type 'object'",
                    "properties": {
                        "type": {
                            "const": "object"
                        },
                        "columns": {
                            "type": "object",
                            "additionalProperties": {
                                "$ref": "#/$defs/column"
                            }
                        }
                    },
                    "required": [
                        "type",
                        "columns"
                    ],
                    "additionalProperties": false
                },
                {
                    "title": "Column of type 'array'",
                    "properties": {
                        "type": {
                            "const": "array"
                        },
                        "columns": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": {
                                    "$ref": "#/$defs/column"
                                }
                            }
                        }
                    },
                    "required": [
                        "type",
                        "columns"
                    ],
                    "additionalProperties": false
                }
            ]
        }
    }
}