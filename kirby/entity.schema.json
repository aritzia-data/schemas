{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://acme.com/entity.schema.json",
    "title": "Entity",
    "description": "A Kirby entity",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the entity (<dataset>_[qa|prd].<table>)",
            "pattern": "^[a-z0-9]+_(qa|prd)\\.[a-z0-9_]+$"
        },
        "description": {
            "type": "string",
            "description": "The description of the entity"
        },
        "ownership": {
            "$ref": "ownership.schema.json"
        },
        "source": {
            "$ref": "source.schema.json"
        },
        "targets": {
            "title": "Entity targets",
            "description": "The targets of the entity",
            "type": "array",
            "items": {
                "$ref": "target.schema.json"
            }
        },
        "schema": {
            "$ref": "schema.schema.json"
        }
    },
    "required": [
        "name",
        "source"
    ],
    "additionalProperties": false
}