{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://acme.com/target.schema.json",
    "title": "Target",
    "description": "A Kirby Target Endpoint",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "description": "The type of target",
            "enum": [
                "bigquery"
            ],
            "default": "bigquery"
        }
    },
    "anyOf": [
        {
            "$ref": "#/$defs/bigqueryTarget"
        }
    ],
    "$defs": {
        "bigqueryTarget": {
            "title": "BigQuery target",
            "type": "object",
            "properties": {
                "type": {
                    "const": "bigquery"
                },
                "dataset": {
                    "type": "string",
                    "description": "The BigQuery dataset name"
                },
                "table": {
                    "type": "string",
                    "description": "The BigQuery table name"
                },
                "isPartitioned": {
                    "type": "boolean",
                    "description": "If the BigQuery table is partitioned",
                    "default": true
                },
                "sqlViewQuery": {
                    "type": "string",
                    "description": "The BigQuery SQL View query"
                },
                "authorizedRoutines": {
                    "title": "Authorized routines",
                    "description": "The BigQuery authorized routines",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "The BigQuery authorized routine (<project>.<dataset>.<routine>)",
                        "pattern": "^[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+$"
                    }
                },
                "authorizedViews": {
                    "title": "Authorized views",
                    "description": "The BigQuery authorized views",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "The BigQuery authorized view (<project>.<dataset>.<view>)",
                        "pattern": "^[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+$"
                    }
                },
                "authorizedDatasets": {
                    "title": "Authorized datasets",
                    "description": "The BigQuery authorized datasets",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "The BigQuery authorized dataset (<project>.<dataset>)",
                        "pattern": "^[a-zA-Z0-9_]+\\.[a-zA-Z0-9_]+$"
                    }
                }
            },
            "additionalProperties": false
        }
    }
}
